<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".KataKosaIsyarat">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="25dp"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/keluarga"
            android:layout_width="375dp"
            android:layout_height="150dp"
            android:layout_marginTop="25dp"
            android:layout_gravity="center"
            app:cardCornerRadius="12dp"
            app:cardElevation="8dp">

            <ImageView
                android:src="@drawable/family"
                android:layout_marginRight="90dp"
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:layout_gravity="center">
            </ImageView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="155dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:textColor="@color/violet"
                    android:text="Keluarga"
                    android:layout_marginTop="50dp"
                    android:layout_gravity="center_horizontal"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/buah"
            android:layout_width="375dp"
            android:layout_height="150dp"
            android:layout_marginTop="25dp"
            android:layout_gravity="center"
            app:cardCornerRadius="12dp"
            app:cardElevation="8dp">

            <ImageView
                android:src="@drawable/buah"
                android:layout_marginRight="90dp"
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:layout_gravity="center">
            </ImageView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="155dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="@color/violet"
                    android:text="Buah-Buahan"
                    android:layout_marginTop="60dp"
                    android:layout_gravity="center_horizontal"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/mood"
            android:layout_width="375dp"
            android:layout_height="150dp"
            android:layout_marginTop="25dp"
            android:layout_gravity="center"
            app:cardCornerRadius="12dp"
            app:cardElevation="8dp">

            <ImageView
                android:src="@drawable/mood"
                android:layout_marginRight="90dp"
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:layout_gravity="center">
            </ImageView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="155dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/violet"
                    android:text="Ekspresi Wajah"
                    android:layout_marginTop="60dp"
                    android:layout_gravity="center_horizontal"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/makan"
            android:layout_width="375dp"
            android:layout_height="150dp"
            android:layout_marginTop="25dp"
            android:layout_gravity="center"
            app:cardCornerRadius="12dp"
            app:cardElevation="8dp">

            <ImageView
                android:src="@drawable/makanan"
                android:layout_marginRight="90dp"
                android:layout_width="wrap_content"
                android:layout_height="170dp"
                android:layout_gravity="center">
            </ImageView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="155dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:textColor="@color/violet"
                    android:text="Makanan"
                    android:layout_marginTop="55dp"
                    android:layout_gravity="center_horizontal"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/minum"
            android:layout_width="375dp"
            android:layout_height="150dp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="25dp"
            android:layout_gravity="center"
            app:cardCornerRadius="12dp"
            app:cardElevation="8dp">

            <ImageView
                android:src="@drawable/minuman"
                android:layout_marginRight="90dp"
                android:layout_width="wrap_content"
                android:layout_height="170dp"
                android:layout_gravity="center">
            </ImageView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="155dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:textColor="@color/violet"
                    android:text="Minuman"
                    android:layout_marginTop="55dp"
                    android:layout_gravity="center_horizontal"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>